# Database configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_DB=hospital_pro
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Backend configuration
# IMPORTANT: Generate a secure SECRET_KEY for production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=CHANGE-ME-IN-PRODUCTION

# Staff authentication password
STAFF_PASSWORD=CHANGE-ME-IN-PRODUCTION

# Security configuration
# ENVIRONMENT: Set to "production" to enable HTTPS redirect and strict host validation
# Default: "development"
ENVIRONMENT=development

# ALLOWED_HOSTS: Comma-separated list of allowed hostnames for Host header validation
# REQUIRED in production mode (when ENVIRONMENT=production)
# Examples: 
#   - Single domain: ALLOWED_HOSTS=api.hospital.com
#   - Multiple domains: ALLOWED_HOSTS=api.hospital.com,hospital.com,www.hospital.com
# In development mode, localhost and 127.0.0.1 are allowed by default
ALLOWED_HOSTS=localhost,127.0.0.1
